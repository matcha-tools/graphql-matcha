{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "outDir": "lib",
    "pretty": true,
    "types": ["webpack"],
    "lib": ["es2017", "dom", "esnext.asynciterable"],
    "jsx": "react"
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules",
    ".tmp",
    "dist",
    "demo-dist",
    "**/**/voyager.worker.js"
  ],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./manual-types.d.ts",
    "demo/**/*.tsx",
    "src/components/CollapsibleVisualizer.tsx",
    "src/components/Matcha.tsx", "cypress/integration/e2e.test.js"
  ]
}
